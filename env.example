# Email Campaign System Environment Configuration

# SMTP Configuration
EMAIL_PASSWORD=your_email_password_here
SMTP_SERVER=smtp.hostinger.com
SMTP_PORT=465

# Application Settings
MAX_RECIPIENTS=100
RATE_LIMIT_DELAY=2.0

# Authentication (Simple Login)
# IMPORTANT: Set these to a strong, unique admin account for your deployment.
ADMIN_EMAIL=change_me_admin@example.com
ADMIN_PASSWORD=change_me_strong_password_here

# Security
# Generate strong random secrets for production (e.g. using `python -c "import secrets; print(secrets.token_hex(32))"`).
SECRET_KEY=replace_with_strong_secret_key
JWT_SECRET_KEY=replace_with_strong_jwt_secret_key

# Database (for future use)
# DATABASE_URL=sqlite:///email_campaign.db
# DATABASE_URL=postgresql://user:password@localhost/email_campaign

# Logging
LOG_LEVEL=INFO
LOG_FILE=email_campaign.log

# Deployment
FLASK_ENV=production
FLASK_DEBUG=False

# AI / Agent
OPENROUTER_API_KEY=your_openrouter_api_key_here

# CORS configuration (comma-separated origins)
# e.g. CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,https://your-frontend.example.com
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
